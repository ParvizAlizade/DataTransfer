@using WebApplication9.Models;
@{
    Layout = "_Layout";
}

@model List<Continents>

<style>
      button {
        --c: #202091; /* the color*/
        box-shadow: 0 0 0 .1em inset var(--c);
        --_g: linear-gradient(var(--c) 0 0) no-repeat;
        background: var(--_g) calc(var(--_p,0%) - 100%) 0%, var(--_g) calc(200% - var(--_p,0%)) 0%, var(--_g) calc(var(--_p,0%) - 100%) 100%, var(--_g) calc(200% - var(--_p,0%)) 100%;
        background-size: 50.5% calc(var(--_p,0%)/2 + .5%);
        outline-offset: .1em;
        transition: background-size .6s, background-position 0s .4s;
    }

        button:hover {
            --_p: 100%;
            transition: background-position .6s, background-size 0s;
            color: white
        }

        button:active {
            box-shadow: 0 0 9e9q inset #0009;
            background-color: var(--c);
            color: #fff;
        }


    button {
        font-family: system-ui, sans-serif;
        font-size: 23px;
        cursor: pointer;
        padding: .4em .9em;
        font-weight: 700;
        border: none;
        background-color: wheat;
    }
</style>

<ul style="margin-bottom:0px; display:flex;justify-content:space-around; padding:146px 0px" class="continent-buttons">
    @foreach (var item in Model)
    {
        <li style="list-style-type:none">
            <button> @item.ContinentName </button>
        </li>
    }
</ul>
